<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nicebody.mapper.CoachTagMapper">
    <resultMap id="coachMap" type="com.nicebody.pojo.CoachInfo">
        <id column="coach_id" property="coachId"></id>
        <result column="coach_desc" property="coachDesc"></result>
        <result column="coach_name" property="coachName"></result>
        <result column="coach_price" property="coachPrice"></result>
        <association property="coachImage" javaType="com.nicebody.pojo.CoachImage">
            <result column="image_url" property="imageUrl"></result>
        </association>
    </resultMap>

    <resultMap id="coachByTag" type="com.nicebody.pojo.CoachInfo">
        <id column="coach_id" property="coachId"></id>
        <result column="coach_desc" property="coachDesc"></result>
        <result column="coach_name" property="coachName"></result>
        <result column="coach_price" property="coachPrice"></result>
        <association property="coachImage" javaType="com.nicebody.pojo.CoachImage">
            <result column="image_url" property="imageUrl"></result>
        </association>
    </resultMap>

    <select id="queryAllCoach" resultMap="coachMap">
        SELECT i.coach_id,i.coach_desc,i.coach_name,i.coach_price,m.image_url
        FROM tb_coach_info i, tb_coach_image m
        where i.coach_id = m.coach_id
    </select>

    <select id="queryCoachTag" resultType="coachTag">
        SELECT tag_id,tag_name,create_time,update_time
        FROM tb_tag
    </select>

    <select id="queryCoachByName" resultMap="coachMap" parameterType="String">
        SELECT i.coach_id,i.coach_desc,i.coach_name,i.coach_price,m.image_url
        FROM tb_coach_info i, tb_coach_image m
        where i.coach_id = m.coach_id and i.coach_name like "%${coachName}%"
    </select>

    <select id="queryCoachByTag" resultMap="coachMap">
        SELECT i.coach_id,i.coach_desc,i.coach_name,i.coach_price,m.image_url
        FROM tb_coach_info i, tb_coach_image m
        <where>
            i.coach_id = m.coach_id
            <if test="tagId !=0 and condition==0">
                and i.tag_id = #{tagId}
            </if>
            <if test="tagId==0 and condition==1">
                order by i.coach_price
            </if>
            <if test="tagId==0 and condition==2">
                order by i.coach_price desc
            </if>
            <if test="tagId!=0 and condition==1">
                and i.tag_id = #{tagId}
                order by i.coach_price
            </if>
            <if test="tagId!=0 and condition==2">
                and i.tag_id = #{tagId}
                order by i.coach_price desc
            </if>
        </where>
    </select>
</mapper>